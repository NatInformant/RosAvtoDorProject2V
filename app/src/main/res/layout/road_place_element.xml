<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/road_place_element_background"
    android:paddingVertical="4dp"
    >
    <TextView
        android:id="@+id/road_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="6dp"
        android:paddingTop="3dp"
        android:textStyle="bold"

        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/road_place_go_to_yandex_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="6dp"
        android:text="@string/road_place_go_to_yandex_map_title"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/road_place_title"
        />
    <TextView
        android:id="@+id/go_to_yandex_map_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/road_place_go_to_button_background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:text="@string/go_to_yandex_map_button_title"
        android:textAlignment="center"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/road_place_go_to_yandex_map"
        />

</androidx.constraintlayout.widget.ConstraintLayout>