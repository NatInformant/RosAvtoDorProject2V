<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#399FEA"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/user_picture"
        android:layout_margin="6dp"
        android:layout_height="70dp"
        android:layout_width="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height ="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/user_picture"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/user_last_message"
        android:layout_width="wrap_content"
        android:layout_height ="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/user_picture"
        app:layout_constraintBottom_toBottomOf="@id/user_picture"
        />
    <TextView
        android:id="@+id/user_last_message_date"
        android:layout_width="wrap_content"
        android:layout_height ="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageButton
        android:id="@+id/actions_button"
        android:layout_width="40dp"
        android:layout_height ="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/actions_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/user_picture"
        />
</androidx.constraintlayout.widget.ConstraintLayout>