<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/popup_window_background"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/create_description_popup_window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:textSize="17sp"
            android:text="@string/create_description_for_adding_point_popup_window_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:id="@+id/adding_point_description"
            android:layout_width="0dp"
            android:minHeight="64dp"
            android:layout_height="wrap_content"
            android:background="@drawable/create_description_for_adding_point_popup_window_edit_text_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:hint="@string/create_description_for_adding_point_popup_window_edit_text_hint"
            android:textSize="15sp"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:gravity="top|start"
            app:layout_constraintTop_toBottomOf="@id/create_description_popup_window_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/create_description_popup_window_title"
            />
        <ImageButton
            android:id="@+id/add_photo_to_point_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/paperclip_icon"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/adding_point_description"
            app:layout_constraintStart_toStartOf="@id/adding_point_description"/>
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/added_photos_list"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/add_photo_to_point_button"
            app:layout_constraintTop_toTopOf="@id/add_photo_to_point_button"
            />
        <TextView
            android:id="@+id/confirm_description_adding_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/create_description_for_adding_point_popup_window_confirm_button_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="@string/create_description_for_adding_point_popup_window_confirm_button_text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/added_photos_list"
            app:layout_constraintEnd_toEndOf="@id/adding_point_description"/>
        <TextView
            android:id="@+id/cancel_description_adding_button"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/create_description_for_adding_point_popup_window_cancel_button_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="@string/create_description_for_adding_point_popup_window_cancel_button_text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/added_photos_list"
            app:layout_constraintStart_toStartOf="@id/adding_point_description"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>